<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
      <div class="modal-settings">
        <%= simple_form_for @user, url: settings_path, method: :patch, html: { class: "form-upload", data: { controller: "photo-upload", action: "change->photo-upload#previewImage" } } do |form| %>
          <div class="user-info">
            <div class="avatar-container">
              <%= image_tag @user.photo.attached? ? @user.photo : asset_path("avatar/profile.anonymus.png"), width: "518", height: "156", alt: "Avatar", class: "user-avatar", data: { photo_upload_target: "preview" } %>
              <label for="file-upload-input" class="edit-label" data-photo-upload-target="editLabel">Editar Foto</label>
              <%= form.file_field :photo, class: "file-input", direct_upload: true, id: "file-upload-input", data: { photo_upload_target: "input" } %>
            </div>
            <div class="user-details">
              <h4 class="user-name"><%= @user.name %></h4>
              <p class="user-email"><%= @user.email %></p>
            </div>
          </div>

          <h4 class="edit-title">Editar Informações</h4>
          <div class="form-group">
            <%= form.input :name, label: "Nome", input_html: { class: "form-input" } %>
          </div>
          <div class="form-group">
            <%= form.input :email, label: "Email", input_html: { class: "form-input" } %>
          </div>
          <div class="form-group">
            <%= form.input :password, label: "Nova Senha", input_html: { class: "form-input", type: "password" }, placeholder: "********" %>
          </div>
          <div class="form-group">
            <%= form.input :password_confirmation, label: "Confirme a Nova Senha", input_html: { class: "form-input", type: "password" }, placeholder: "********" %>
          </div>
          <%= form.submit "SALVAR", class: "btn-save-settings" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
