<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">

    <% if @groups.any? %>
    <h2>Seus Grupos</h2>
    <div class="group-list">
      <% @groups.each do |group| %>
        <div class="group-item">
          <%= link_to group_path(group) do %>
            <% if group.photo.attached? %>
              <%= image_tag group.photo, alt: "Imagem do grupo #{group.name_group}", class: "group-image" %>
            <% else %>
              <div class="default-image"></div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <h2>Toque no bot√£o para criar seu primeiro grupo</h2>
    <%= link_to 'Criar Grupo', new_group_path, class: "btn btn-primary" %>
  <% end %>
</div>


    </div>
  </div>
</div>
