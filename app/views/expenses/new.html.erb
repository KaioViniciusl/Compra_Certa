<h1>Nova despesa</h1>

<%= simple_form_for([@group, @expense]) do |form| %>
  <div class="form-inputs">
    <%= form.input :name_expense, label: "Nome da Despesa" %>
    <%= form.input :description, as: :text, label: "Descrição" %>
    <%= form.input :date, as: :date, label: "Data" %>
    <%= form.input :amount, step: "0.01", label: "Valor total" %>
  </div>

  <h4>Compartilhamento:</h4>
  <div class="form-inputs">
    <% @users.each do |user| %>
      <div class="user-share">
        <%= check_box_tag "expense_shares[#{user.id}]", 0, true, class: "share-checkbox" %>
        <%= label_tag "expense_shares_#{user.id}", user.email %>
        <%= text_field_tag "expense_shares[#{user.id}]", value: 0, class: "share-amount" %>
        <%= link_to "Excluir", "#", class: "remove-user" %>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= form.submit "Criar Despesa" %>
  </div>
<% end %>
