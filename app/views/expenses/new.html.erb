<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
      <div class="group-form-modal">
        <h4 class="text-start mb-3">Adicionar despesas</h4>

        <%= simple_form_for([@group, @expense]) do |form| %>
          <div class="form-inputs">
            <%= form.input :name_expense, label: false, placeholder: "Nome da despesa", input_html: { class: "input-new-expense" } %>
            <%= form.input :description, as: :text, label: "Insira uma descrição:", input_html: { class: "input-new-expense" } %>
            <%= form.input :date, as: :string, label: false, input_html: { data: { controller: "datepicker", datepicker_target: "input" }, placeholder: "Selecione a data..." } %>

            <div class="group-pattern-lightblue">
              <div class="group-pattern-darkblue">
                <%= form.label "R$" %>
              </div>
              <div class="mb-0 w-100">
                <%= form.input :amount, step: 0.01, label: false, input_html: { class: "input-new-expense" } %>
              </div>
            </div>
          </div>

          <p>Quem participou da despesa:</p>
          <div class="form-inputs mt-0">
            <div class="user-share">
              <% @users.each do |user| %>
                <div class="group-pattern-lightblue px-2 py-3 d-flex justify-content-between align-items-center">
                  <%= label_tag "user_share_#{user.id}", user.name, class: "name-form-expenses" %>
                  <%= check_box_tag "expense_shares[#{user.id}][selected]", 1, false, id: "user_share_#{user.id}", class: "input-checkbox-form-expense" %>
                </div>
                <div class="pw-3">
                  <%= text_field_tag "expense_shares[#{user.id}][amount]", nil, class: "share-amount", placeholder: "R$0,00" %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="form-actions">
            <%= form.submit "SALVAR", class: "btn create-button-new" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
