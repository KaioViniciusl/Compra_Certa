<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
      <div class="group-show-modal">

        <h2>Adicionar despesas</h2>
        <%= simple_form_for([@group, @expense]) do |form| %>
          <div class="form-inputs">
            <%= form.input :name_expense, label: "Nome da despesa:" %>
            <%= form.input :description, as: :text, label: "Insira uma descrição:" %>
            <%= form.input :date, as: :date, label: "Data" %>
            <%= form.input :amount, step: "0.01", label: "Valor total da despesa:" %>
          </div>

          <h4>Compartilhamento:</h4>
          <div class="form-inputs">
            <% @users.each do |user| %>

              <div class="user-share">
                <%= check_box_tag "expense_shares[#{user.id}][selected]", 1, false, id: "user_share_#{user.id}", class: "share-checkbox" %>
                <%= label_tag "user_share_#{user.id}", user.email %>
                <%= text_field_tag "expense_shares[#{user.id}][amount]", nil, class: "share-amount", placeholder: "R$ adicione quanto seu amigo pagou" %>
              </div>

            <% end %>
          </div>

          <div class="form-actions mt-3">
            <%= form.submit "SALVAR", class: "btn create-button-new" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
