<h1>Registrar Pagamento</h1>

<%= simple_form_for([@group, @expense, @payment]) do |form| %>
  <div class="form-inputs">
    <%= form.input :user_id, collection: @group.users, label: "Usuário" %>
    <%= form.input :amount, step: "0.01", label: "Valor" %>
    <%= form.input :description, as: :text, label: "Descrição" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Registrar Pagamento" %>
  </div>
<% end %>
