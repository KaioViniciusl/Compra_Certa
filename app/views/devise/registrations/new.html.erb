<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4 modal-registrations-wrapper">
      <%= image_tag("bg/cactus.png", :class => "bg-ballandcactus") %>
      <div class="modal-groups">
        <%= image_tag("icons/ElementBlue.png", :class => "bg-registration-modal") %>
        <h4 class="h4-registrations">Fa√ßa seu cadastro</h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name,
                        required: true,
                        autofocus: true,
                        label: "Digite seu nome:",
                        input_html: { class: "custom-input", autocomplete: "name" } %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: "Seu email:",
                        input_html: { class: "custom-input", autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        label: "Digite sua senha:",
                        input_html: { class: "custom-input", autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: "Repita sua senha:",
                        input_html: { class: "custom-input", autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "CADASTRAR-SE", class: "btn-registration" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>

      <div class="image-logo logo-footer-registration">
          <%= image_tag("logo.png")%>
      </div>

    </div>
  </div>
</div>
