<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4 modal-groups-wrapper">
      <%= image_tag("bg/BallAndCactus.png", :class => "bg-ballandcactus") %>
      <div class="modal-groups">
        <%= image_tag("icons/ElementDark.png", :class => "bg-show-modal") %>

        <%= link_to root_path do %>
          <%= image_tag "icons/seta_buton.png", alt: "Login" %>
        <% end %>

        <h4 class="h4-login">Fa√ßa seu login</h4>

        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "exemplo@contacerta.site",
                        input_html: { class: "custom-input", autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "********",
                        input_html: { class: "custom-input", autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "ACESSAR", class: "btn-login-newhtml" %>
          </div>
        <% end %>

        <div class="btn-forgot-password">
          <%= link_to "Esqueceu sua senha?", new_user_password_path %>
        </div>

      </div>

      <div class="image-logo logo-footer">
        <%= image_tag("logo.png") %>
      </div>

    </div>
  </div>
</div>
