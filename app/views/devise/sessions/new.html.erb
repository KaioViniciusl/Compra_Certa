<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
      <div class="modal-groups">
        <h2>Entrar</h2>
        <br>
        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label: "Seu email de acesso",
                        input_html: { class: "custom-input", autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        label: "Digite sua senha",
                        input_html: { class: "custom-input", autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "ENTRAR", class: "btn-login" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      
      </div>
      <div class="image-logo-container">
        <%= image_tag("logo.png", class: "image-logo") %>
      </div>
    </div>
  </div>
</div>
