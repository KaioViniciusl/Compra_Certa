<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4 modal-groups-wrapper">
      <%= image_tag("bg/BallAndCactus.png", :class => "bg-ballandcactus") %>
      <div class="modal-groups">
        <%= image_tag("icons/ElementDark.png", :class => "bg-show-modal") %>

        <h2 class="padding-40px">Entrar</h2>

        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "Seu email de acesso",
                        input_html: { class: "custom-input", autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "Digite sua senha",
                        input_html: { class: "custom-input", autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "ENTRAR", class: "btn-login-newhtml" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>

      <div class="image-logo logo-footer">
        <%= image_tag("logo.png")%>
      </div>

    </div>
  </div>
</div>
